.tab1{
  position: relative;
  height: 100%;
  overflow: scroll;
}

.content{
  background: white;
  margin: 0 4%;
  padding: 0 4%;
  height: auto;
}

.line{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  height: 1.4rem;
  border-bottom: 1rpx solid rgba(245,245,245,1);
}

.up-title{
  padding: 10rpx 0;
  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
}

.tv{
  width: 100%;
}

.title{
  margin-right: 20rpx;
}

.remark{
  padding: 20rpx 0;
  border-bottom: 2rpx solid #F0F0F2;
}

.textareaClass{
  padding-left: 20rpx;
  padding-top: 20rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  text-align: left;
  background:rgba(245,245,245,1);
  width: 96%;
  margin-top: 20rpx;
}

.placeholderClass{
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
  text-align: left;
}

.preview{
  overflow: hidden;
  margin-top: 40rpx;
}

.pic{
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.fill{
  width: 100%;
  height: 300rpx;
}

.buttons{
  position: fixed;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.button{
  font-size: 28rpx;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 5rpx;
  color: white;
  margin: 15rpx 4%;
  width: 50%;
  
}

.scanButton{
  background:rgba(255,114,114,1);
  box-shadow:0px 5px 10px rgba(255,114,114,0.1);
}

.photoButton{
  background:rgba(38,130,255,1);
  box-shadow:0px 5px 10px rgba(0,85,248,0.1); 
}

.uploadButton{
  background: #ff4401;
}

.finshButton{
  background: black;
}

.item{
  display: flex;
  justify-content: flex-end;
  align-items: center;  
}

.moreIcon{
  width: 26rpx;
  height: 26rpx;
}

.task{
  padding: 20rpx;
}

.content-input{
  padding: 0 20rpx;
  font-size: 28rpx;
  width: 284rpx;
  color: rgba(153, 153, 153, 1);
  border: 2rpx solid #F0F0F2;
}

.content-box {
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 20rpx;
  word-break: break-all;
  word-wrap: break-word;
}

.bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.afk{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  font-size: 28rpx;
}

.ask{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 20rpx;
  font-size: 28rpx;
}

.margin-top20{
  margin-top: 20rpx;
}

.add-content{
  margin-left: 20rpx;
  padding: 0 10rpx;
  height: 1.4rem;
  text-align: center;
  line-height: 1.4rem;
  font-size: 22rpx;
  color: #FFF;
  background-color: rgba(38,130,255,1);
  border-radius: 4rpx;
}

.del-content{
  background: black;
}

.taskTitle{
  padding: 20rpx 0;
  font-size: 28rpx;
  color: rgb(51, 51, 51);
}

.task-white{
  padding: 20rpx;
}

.task{
  padding: 20rpx;
  margin: 0 20rpx;
  background: rgba(153,153,153,1);
}

.ta{
  font-size: 28rpx;
  color: white;
  word-wrap: break-word;
}

.pics{
  overflow: hidden;
  width: 100%;
}

.pre{
   float: left;
   margin-right: 20rpx;
   padding-bottom: 20rpx;
}

.pic{
  width: 200rpx;
  height: 200rpx;
}

.picTime{
  font-size: 18rpx;
  padding: 10rpx 0;
  text-align: center;
}

.tv{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.download-button{
  position: absolute;
  top: 0;
  right: 0;
  padding: 4rpx 10rpx;
  text-align: center;
  font-size: 22rpx;
  color: #FFF;
  background-color: rgba(38,130,255,1);
  border-radius: 10rpx;
}
