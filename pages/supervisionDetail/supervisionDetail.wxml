<!-- 填充高度 -->
<view style='height: 20rpx;' wx:if='{{superviseFeedback}}'></view>
<!-- 页面开始 -->
<view class='content' wx:if='{{!loadingStatus && superviseFeedback}}'>

      <!-- block1 -->
      <view class='block1'>

            <view class='up-title'>
                  反馈
            </view>

            <view class='line'>
                        <view class='title'>反馈人</view>
                        <view class='value'>{{superviseFeedback.opeartor}}</view>
            </view>

            <view class='line'>
                        <view class='title'>反馈时间</view>
                        <view class='value'>{{superviseFeedback.auto_date}}</view>
            </view>

            <!-- 作业内容 -->
            <view class='taskList'>
                  <view class='taskTitle'>情况描述</view>
                  
                  <!-- 工作内容 -->
                  <view class='task'>
                        <view class='ta'>{{superviseFeedback.remark}}</view>
                  </view>
                  
            </view>

            <!-- 作业照片 -->
            <view class='picsList'>
                  <view class='taskTitle'>现场照片</view>
                  <view class='pics'>
                        <view class='pre' wx:for = '{{superviseFeedback.image}}' wx:key=''>
                              <view class='pic' bindtap='preview' data-index = '{{index}}'>
                                    <image src='{{base_img_url}}/{{item.name}}' mode='aspectFill'></image>
                              </view>
                              <view class='picTime'>{{item.pic_time}}</view>
                        </view>
                  </view>
            </view>

            <!-- <view class='remark'>
                  <view class='title'>备注:</view>
                  <textarea placeholder='请输入备注信息' maxlength='-1' placeholder-class='placeholderClass' class='textareaClass' bindinput='pickerChange' data-key = 'remark'></textarea>
                  
            </view> -->

