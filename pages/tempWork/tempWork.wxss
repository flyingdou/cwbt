Page{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background:rgba(245,245,245,1);
  position: relative;
}

image{
  display: block;
  width: 100%;
  height: 100%;
}

.content{
  background: white;
  padding: 0 4%;
}

.block1{
  margin-top: 20rpx;
}

.line{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(245,245,245,1);
}

.title{
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
}

.value{
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
}

.remark{
  padding: 20rpx 0;
}

.textareaClass{
  padding-left: 20rpx;
  padding-top: 20rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  text-align: left;
  background:rgba(245,245,245,1);
  width: 96%;
  margin-top: 20rpx;
}

.placeholderClass{
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
  text-align: left;
}

.preview{
  overflow: hidden;
  margin-top: 40rpx;
}

.shot{
  padding-top: 20rpx;
  overflow: hidden;
}

.prePic{
  float: left;
  margin-right: 20rpx;
}

.pic{
  width: 100rpx;
  height: 100rpx;
}

.pic_time{
  font-size: 11rpx;
  text-align: center;
}

.fill{
  width: 100%;
  height: 300rpx;
}

.buttons{
  position: fixed;
  bottom: 40rpx;
  left: 0;
  width: 100%;
}

.button{
  font-size: 28rpx;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 5rpx;
  color: white;
  margin: 15rpx 4%
}

.scanButton{
  background:rgba(255,114,114,1);
  box-shadow:0px 5px 10px rgba(255,114,114,0.1);
}

.photoButton{
  background:rgba(38,130,255,1);
  box-shadow:0px 5px 10px rgba(0,85,248,0.1); 
}

.uploadButton{
  background: #ff4401;
}

.finshButton{
  background: black;
}

.rollbackButton{
  background:rgba(255,114,114,1);
  box-shadow:0px 5px 10px rgba(255,114,114,0.1);
}

.gotButton{
  background: black;
}

.item{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.moreIcon{
  width: 26rpx;
  height: 26rpx;
}

.task{
  margin-left: 16%;
  background: #F5F5F5;
  padding: 20rpx 4%;
}

.inputDiv{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.xd{
  padding-right: 10rpx;
}