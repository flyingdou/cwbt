textarea{
  z-index: 0;
}

.content{
  background: white;
  padding: 0 4%;
  height: auto;
}

.block1{
  margin-top: 20rpx;
}

.line{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(245,245,245,1);
}

.line-right{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.remark{
  padding: 20rpx 0;
}

.value{
  color:rgba(128,128,128,1);
  background:#f5f5f5;
}

.moreIcon{
  width: 26rpx;
  height: 26rpx;
}

.textareaClass{
  padding-left: 20rpx;
  padding-top: 20rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  text-align: left;
  background:rgba(245,245,245,1);
  width: 96%;
  margin-top: 20rpx;
}

.placeholderClass{
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
  text-align: left;
}

.preview{
  overflow: hidden;
  margin-top: 40rpx;
}

.shot{
  padding-top: 20rpx;
  overflow: hidden;
}

.prePic{
  float: left;
  margin-right: 20rpx;
}

.shotPic{
  width: 160rpx;
  height: 160rpx;
  padding-right: 20rpx;
}

.addPic{
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.pic_time{
  font-size: 16rpx;
  text-align: center;
  width: 160rpx;
}

.fill{
  width: 100%;
  height: 300rpx;
}

.buttons{
  position: fixed;
  bottom: 40rpx;
  left: 0;
  width: 100%;
}

.update-buttons{
  display: flex;
  justify-content: space-around;
}

.button{
  flex: 1;
  font-size: 28rpx;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 5rpx;
  color: white;
  margin: 15rpx 4%
}

.scanButton{
  background:rgba(255,114,114,1);
  box-shadow:0px 5px 10px rgba(255,114,114,0.1);
}

.photoButton{
  background:rgba(38,130,255,1);
  box-shadow:0px 5px 10px rgba(0,85,248,0.1); 
}

.uploadButton{
  background: #ff4401;
}

.finshButton{
  background: black;
}

.rollbackButton{
  background:rgba(255,114,114,1);
  box-shadow:0px 5px 10px rgba(255,114,114,0.1);
}

.gotButton{
  background: black;
}

.item{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.moreIcon{
  width: 26rpx;
  height: 26rpx;
}

.task{
  background: #F5F5F5;
}

.inputDiv{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.xd{
  padding-right: 10rpx;
  width: 160rpx;
}

.xdInput{
  width: 50%;
}

.pickerDiv{
  padding-bottom: 20rpx;
}

.tagName{
  font-size:32rpx;
  color:black;
  background:#ccc;
  text-align:center;
  padding:20rpx 0;
  margin: 20rpx 0;
}

.fl{
  display: flex;
  justify-content: flex-end;
  align-items: center; 
}

.ft{
  padding-right: 20rpx;
}

.picTitle{
  padding-top: 20rpx;
}


.taskTitle{
  padding: 20rpx 0;
  font-size: 28rpx;
  color: rgba(51,51,51,1);
}

.task{
  padding: 20rpx;
  margin: 0 20rpx;
}

.ta{
  font-size: 28rpx;
  color: white;
}

.pics{
  overflow: hidden;
  width: 100%;
}

.pre{
   float: left;
   margin-right: 20rpx;
   padding-bottom: 20rpx;
}

.pic{
  width: 200rpx;
  height: 200rpx;
}

.picTime{
  font-size: 18rpx;
  padding: 10rpx 0;
  text-align: center;
}