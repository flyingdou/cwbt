<!-- 引入过滤器 -->
<wxs module = 'filter' src = '../../utils/filters.wxs'></wxs>
<!-- 填充高度 -->
<view style='height: 20rpx;'></view>

<!-- 页面开始 -->
<view class='content' wx:if='{{!loadingStatus}}'>

      <!-- block1 -->
      <view class='block1'>

            <view class='line'>
                  <view class='title'>设备名称</view>
                  <view class='value'>{{equipment.name}}</view>
            </view>

            <view class='line'>
                  <view class='title'>设备编码</view>
                  <view class='value'>{{equipment.number}}</view>
            </view>

            <view class='line'>
                  <view class='title'>维修方式</view>
                  <view class='value'>
                        <view wx:if = '{{overhaul == 0 || overhaul == 1}}'>{{filter.overhaul(overhaul)}}</view>
                        <view wx:else>
                              <picker range='{{pickerData}}' range-key='name' bindchange='saveFormData' data-key='index'>{{pickerData[index].name}}</picker>
                        </view>
                  </view>
            </view>
            
            <view class='remark'>
                  <view class='title'>异常描述</view>
                  <textarea placeholder='请输入异常描述信息' maxlength='-1' placeholder-class='placeholderClass' class='textareaClass' bindinput='saveFormData' data-key = 'remark'></textarea>
                  
            </view> 

            <!-- preview -->
            <view class='preview'>
                  <view class='line'>
                        <view class='title'>异常图片</view>
                  </view>

                  <!-- 图片预览 -->
                  <view class='pic' wx:for = '{{photos}}' wx:key='' bindtap='preview' bindlongtap='deletePic' data-index = '{{index}}' data-key = 'tempFilePath' data-itemlist = '{{photos}}' data-prefix = '' data-photoskey = 'photos'>
                        <image src='{{item.tempFilePath}}' mode='aspectFill' ></image>
                  </view>

                  <!-- 拍图按钮 -->
                  <view class='pic'>
                        <image src='../../icon/redAdd.png' mode='aspectFill'  bindtap='photo' data-key = 'photos' ></image>
                  </view>
            </view>

            
      </view>

      <!-- 执行反馈 -->
      <view class = 'block2' wx:if = '{{overhaul == 0}}'>
            <view class='tagName'>处理反馈</view>
            <view class='remark p4'>
                  <view class='title'>处理情况描述</view>
                  <textarea placeholder='请输入处理情况描述' maxlength='-1' placeholder-class='placeholderClass' class='textareaClass' bindinput='saveFormData' data-key = 'exRemark'></textarea>
            </view>

            <!-- preview -->
            <view class='preview p4'>
                  <view class='line'>
                        <view class='title'>维修后图片</view>
                  </view>

                  <!-- 图片预览 -->
                  <view class='pic' wx:for = '{{exPhotos}}' wx:key='' bindtap='preview' bindlongtap='deletePic' data-index = '{{index}}' data-key = 'tempFilePath' data-itemlist = '{{exPhotos}}' data-prefix = '' data-photoskey = 'exPhotos'>
                        <image src='{{item.tempFilePath}}' mode='aspectFill' ></image>
                  </view>

                  <!-- 拍图按钮 -->
                  <view class='pic'>
                        <image src='../../icon/add.png' mode='aspectFill'  bindtap='photo' data-key = 'exPhotos' ></image>
                  </view>
            </view>

      
      </view>

      
      <!-- 填充高度 -->
      <view class='fill'></view>


      <!-- 底部按钮 -->
      <view class='buttons'>
            <view class='button finshButton' bindtap='execute'>确定</view>
      </view>




</view>