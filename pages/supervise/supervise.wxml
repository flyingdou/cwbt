<!-- 页面开始 -->
<view class='content'>
      <!-- 选择行 -->
      <view class='line' bindtap='choose' >
            <view class='title'>发送给：</view>
            <view class='moreIcon'>
                  <image src='../../icon/more@2x.png' mode='aspectFill'></image>
            </view>
      </view>

      <view class='fill'></view>


      <!-- 内容区 -->
      <view class='textArea'>
            <view class='remark'>
                  <view class='title'>内容：</view>
                  <textarea placeholder='请输入督导内容！' maxlength='-1' class='textAreaClass' placeholder-class='inputPlaceHolder' bindinput='inputChange' data-key = 'content'></textarea>
            </view>
      </view>


      <!-- 发送按钮 -->
      <view class='sendButton'>
            <view class='send'>发送</view>
      </view>


</view>

<!-- 弹出框 -->
<mark showModalStatus='{{showModalStatus}}' type='checkbox' bindMark='test'></mark>
