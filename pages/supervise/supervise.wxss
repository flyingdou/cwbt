textarea{
  font-size: 28rpx;
}

.content{
  position: relative;
}

.line{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: white;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 8rpx;
}

.title{
  font-size: 28rpx;
  color: rgba(51,51,51,1);
}

.value{
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
}

.remarkDiv{
  margin: 20rpx;
  padding: 20rpx;
  background: white;
  border-radius: 8rpx;
}

.remarks{
  padding-top: 10rpx;
  padding-left: 20rpx;
}

.remark{
  padding-bottom: 10rpx;
  word-break: break-all;
  word-wrap: break-word;
}

.description{
  margin: 20rpx;
  padding: 20rpx;
  background: white;
  border-radius: 8rpx;
}

.textAreaDiv{
  padding-left: 20rpx;
  padding-top: 10rpx;
}

.placeHolder{
  font-size: 28rpx;
  text-align: left;
}

.preview{
  margin: 20rpx;
  padding: 20rpx;
  background: white;
  border-radius: 8rpx;
  overflow: hidden;

}

.pic{
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}


.deviceStatus{
  margin: 20rpx;
  padding: 20rpx;
  background: white;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer{
   position: fixed;
   left: 0;
   bottom: 40rpx;
   width: 100%;
}

.button{
  text-align: center;
  font-size: 28rpx;
  padding: 20rpx 0;
  color: white;
  margin: 15rpx 20rpx;
  border-radius: 8rpx;
}

.scanButton{
  background:rgba(255,114,114,1);
  box-shadow:0px 5px 10px rgba(255,114,114,0.1);
}

.photo{
  background:rgba(38,130,255,1);
  box-shadow:0px 5px 10px rgba(0,85,248,0.1);
}

.uploadPic{
  background: #ff4401;
}

.finish{
  background: black;
}

.fill{
  width: 100%;
  height: 300rpx;
}

.tright{
  text-align: right;
}