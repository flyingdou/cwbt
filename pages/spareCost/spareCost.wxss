.spare{
  margin: 20rpx;
  padding: 20rpx;
  background: white;
}

.tv{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(245,245,245,1);
}

.tv:last-child{
  border-bottom: none;
}

.title{
  padding-right: 20rpx;
}

.line{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.moreIcon{
  width: 26rpx;
  height: 26rpx;
  padding-left: 20rpx;
}

.footer{
  position: fixed;
  left: 0;
  bottom: 20rpx;
  padding-top: 50rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cost{
  width: 80%;
  padding: 20rpx;
  font-size: 28rpx;
  color: white;
  background: #2682FF;
  border-radius: 5rpx;
  text-align: center;
}

.background-bolck{
  height: 20rpx;
  background-color: rgba(245,245,245,1);
}

.add-btn{
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  padding: 20rpx 50rpx;
  font-size: 28rpx;
  color: white;
  text-align: center;
}

.btn-block{
  padding: 20rpx 60rpx;
  background: #2682FF;
  border-radius: 5rpx;
}