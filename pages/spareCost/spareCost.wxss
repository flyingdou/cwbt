Page{
  margin: 0;
  padding: 0;
  width: 100%;
  height: auto;
  background: rgba(245,245,245,1);
}

image{
  display: block;
  width: 100%;
  height: 100%;
}

.content{
  width: 100%;
  height: 100%;
}

.spare{
  margin: 20rpx;
  padding: 20rpx;
  background: white;
}

.tv{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(245,245,245,1);
}

.tv:last-child{
  border-bottom: none;
}

.title{
  padding-right: 20rpx;
  font-size: 28rpx;
  color: rgba(51,51,51,1);
}

.value{
  font-size: 28rpx;
  color: rgba(153,153,153,1);
}

.line{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.moreIcon{
  width: 26rpx;
  height: 26rpx;
  padding-left: 20rpx;
}

.footer{
  position: absolute;
  left: 0;
  padding-top: 50rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cost{
  padding: 20rpx 50rpx;
  font-size: 28rpx;
  color: white;
  background: #2682FF;
  border-radius: 5rpx;
  text-align: center;
}