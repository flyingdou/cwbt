<!-- 页面开始 -->
<view class='content'>
		<!-- 选择区 -->
		<view class = 'choose'>
				<!-- 接收人 -->
				<view class = 'chooseLine' bindtap='choose' data-type = 'rec'>
						<view class='left'>
                  <view class = 'title tv'>接收人:</view>
                  <view class='value' wx:for = '{{recUsers}}' wx:key = ''>{{item.user_name}}<text wx:if = '{{index != (recUsers.length -1)}}'>、</text></view>
            </view>
						<view class = 'moreIcon'>
								<image src = '../../icon/more@2x.png' mode = 'aspectFill'></image>
						</view>
				</view>
				
				<!-- 抄送 -->
				<view class = 'chooseLine' bindtap='choose' data-type = 'copy'>
						<view class='left'>
                  <view class = 'title tv'>抄送:</view>
                  <view class='value' wx:for = '{{copyUsers}}' wx:key = ''>{{item.user_name}}<text wx:if = '{{index != (copyUsers.length -1)}}'>、</text></view>
            </view>
						<view class = 'moreIcon'>
								<image src = '../../icon/more@2x.png' mode = 'aspectFill'></image>
						</view>
				</view>
		</view>
		
		<!-- 内容区 -->
		<view class = 'remark'>
				<view class = 'title'>
						<view class = 'title'>内容:</view>
						<textarea placeholder='请输入督导内容' placeholder-class = 'placeHolder' maxlength='-1'  bindinput='inputChange' data-key = 'content'></textarea>
				</view>
				
				
		</view>


    <!-- 发送按钮 -->
    <view class='sendButton'>
          <view class='send' bindtap='send'>发送</view>
    </view>

</view>

