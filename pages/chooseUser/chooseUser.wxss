/* default css */
Page{
  margin: 0;
  padding: 0;
  width: 100%;
  background:rgba(245,245,245,1);
}

image{
  display: block;
  width: 100%;
  height: 100%;
}

input{
  font-size: 28rpx;
  color: rgba(153,153,153,1);
}

.content{
  width: 100%;
  height: 100%;
  position: relative;
}

.searchDiv{
  background: white;
}

.search{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 20rpx;
  padding: 15rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(245,245,245,1);
}

.searchIcon{
  width: 32rpx;
  height: 32rpx;
  padding: 10rpx;
}

.navBar{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 40rpx 20rpx;
  background: white;
  margin-bottom: 20rpx;
  border-radius: 5rpx;
}

.preNav{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.nav{
   font-size: 28rpx;
   padding-right: 10rpx;
   color: blue; 
}

.current{
  color: rgba(153,153,153,1);
}

.deptList{
  background:white;
  padding:20rpx;
}

.preDept{
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding: 20rpx 0;
  font-size: 28rpx;
  border-bottom:0.5px solid rgba(245,245,245,1);
}

.preDept:last-child{
  border-bottom: none;
}

.left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
	widows: 50%;
}

.deptName{
  padding-left: 20rpx;
}

.next{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.nextImg{
  width: 32rpx;
  height: 27rpx;
}

.nextFont{
  padding-left: 15rpx;
  font-size: 28rpx;
  color: rgba(54, 123, 240, 1);
}

.userList{
  background:white;
  padding:20rpx;
  margin:20rpx 0;
}

.preUser{
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding:20rpx 0;
  border-bottom:1rpx solid rgba(245,245,245,1);
}

.preUser:last-child{
  border-bottom: none;
}

.userName{
  font-size: 28rpx;
}

.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  width:100%;
  border-top:1rpx solid rgba(245,245,245,1);
  border-radius:5rpx;
  background: white;
}

.chooseAllLine{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding:15rpx 20rpx;
  font-size:28rpx;
}

.chooseAll{
  padding-right: 20rpx;
}

.sureLine{
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding:15rpx 20rpx;
  font-size:28rpx;
}

.sure{
  padding: 10rpx 25rpx;
  background: #2682FF;
  color: white;
  border-radius: 5rpx;
}

.douFill{
  width: 100%;
  height: 180rpx;
}