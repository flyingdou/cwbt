.content{
  background: white;
  margin-top: 30rpx;
}

.line{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 4%;
}

.moreIcon{
  width: 26rpx;
  height: 26rpx;
}

.fill{
  width: 100%;
  height: 30rpx;
  background: rgba(245,245,245,1);
}

.textArea{
  padding: 30rpx 4%;
}

.textAreaClass{
  font-size: 28rpx;
  text-align: left;
  padding: 20rpx;
  background: rgba(245,245,245,1);
  margin: 20rpx auto;
}

.inputPlaceHolder{
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
}


.sendButton{
  width: 100%;
}

.send{
   background: #27CDFF;
   font-size: 30rpx;
   color: white;
   padding: 20rpx 0;
   margin: 0 auto;
   width: 20%;
   text-align: center;
   border-radius: 8rpx;
}

.choose{
  padding: 20rpx 4%;
}

.pickers{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 40rpx;
}

picker{
  padding-right: 30rpx;
}

.recUserDiv{
  padding-top: 20rpx;
}

.recUser{
  padding-left: 40rpx;
}

.boatDiv{
   padding-top: 20rpx;
   display: flex;
   justify-content: space-between;
   align-items: center;
}

.boat{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-right: 20rpx;
}

.device{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.pickValue{
  padding-left: 20rpx;
}


.remarkList{
  padding: 20rpx;
}

.remarkContent{
  padding-bottom: 20rpx;
}

.remark{
  word-break: break-all;
  word-wrap: break-word;
}

.remarkTitle{
  font-size: 28rpx;
}

.remarkValue{
  font-size: 28rpx;
  color: #999999;
  padding-top: 10rpx;
}

.valuess{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.lp{
  padding-right: 30rpx;
}

