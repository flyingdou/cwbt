Page{
  background: #F0F0F2;
}

/* 我的页面 */
.content{
  position: relative;
}

.background{
  width: 100%;
  height: 290rpx;
  background: linear-gradient(180deg,rgba(52,138,255,1) 0%,rgba(38,213,255,1) 100%);
  opacity: 1;
}

.block-card{
  position: absolute;
  top: 100rpx;
  left: 50%;
  margin-left: -330rpx;
  padding: 60rpx 0;
  width: 660rpx;
  background-color: #FFF;
  border-radius: 6rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 60rpx;
}

.user-info{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
}

.user-image{
  margin-left: 40rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-other-info{
  margin-left: 20rpx;
  height: 112rpx;
}

.user-nick{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 10rpx;
  font-size: 28rpx;
}

.user-nick-icon{
  margin-right: 20rpx;
  width: 60rpx;
  height: auto;
}

.user-nick-text{
  margin-top: -8rpx;
  white-space:nowrap;
}

.user-address{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
}

.user-address-icon{
  margin: 0 20rpx;
  width: 20rpx;
  height: auto;
}

.user-address-text{
  margin-left: 20rpx;
  white-space:nowrap;
}

.blocks{
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.block{
  position: relative;
}

.block-icon{
  margin: 0 auto;
  width: 48rpx;
  height: auto;
}

.block-text{
  margin-top: 40rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(38,130,255,1);
  opacity: 1;
}

.block-count{
  position: absolute;
  top: 0;
  right: 0;
  margin-top: -14rpx;
  padding: 4rpx;
  min-width: 24rpx;
  font-size: 20rpx;
  color: #FFF;
  font-family:PingFang SC;
  font-weight:500;
  text-align: center;
  line-height: 28rpx;
  border-radius: 50%;
  background: rgba(255,114,114,1);
  opacity: 1;
}

.tool-line{
  background-color: #FFF;
  margin-bottom: 2rpx;
}

.line{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  padding-left: 40rpx;
}

.line-left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.line-left-icon{
  margin-right: 10rpx;
  width: 28rpx;
  height: auto;
}

.line-left-text{
  font-size: 28rpx;
  color: #333333;
}

.line-right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.line-right-icon{
  margin-left: 28rpx;
  width: 20rpx;
  height: auto;
}

.line-right-text{
  font-size: 28rpx;
  color: rgba(153,153,153,1);
}

/* 弹出层css */
.block{
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}

.version{
  font-size: 28rpx;
  color: rgba(128,128,128,1);
}

.detailList{
  border-bottom: rgba(245,245,245,1);
}

.detailList:last-child{
  border: none;
}

.detail{
  font-size: 28rpx;
  padding: 10rpx 0;
  color: rgba(128,128,128,1);
}
