<!-- 过滤器 -->
<wxs module = 'filter' src = '../../utils/filters.wxs'></wxs>
<!-- 页面开始 -->
<view class='content'>


<view class='ticket'>

    <view class='line'  bindtap='test'>
          <!-- plan_job_time -->
          <view class='item'>
                <view class='title'>作业时间：</view>
                <view class='value'>{{workTicket.plan_job_time}}</view>
          </view>
    </view>

    <view class='line'>
     <!-- job_part -->
          <view class='item'>
                <view class='title'>作业部位：</view>
                <view class='value'>{{workTicket.device_part}}</view>
          </view>
    </view>

    <view class='line'>
          <!-- code -->
          <view class='item'>
                <view class='title'>设备编码： </view>
                <view class='value'>{{workTicket.code}}</view>
          </view>

          
    
    </view>

    <view class='line'>
          <!-- deviceName -->
          <view class='item'>
                <view class='title'>设备名称： </view>
                <view class='value'>{{workTicket.name}}</view>
          </view>
    </view>

    <view class='line'>
          <!-- job_properties -->
          <view class='item'>
                <view class='title'>作业属性： </view>
                <view class='value'>{{filter.jobProperties(workTicket.job_properties)}}</view>
          </view>
    </view>

    <!-- 作业内容 -->
    <view class='line'>
          <view class='item desc'>
                <view class='title'>作业内容：</view>
                <view class='value text'>{{workTicket.job_content}}</view>
          </view>
    </view>

    <!-- 作业安全注意事项 -->
    <view class='line'>
          <view class='item desc'>
                <view class='title'>安全注意事项：</view>
                <view class='value text'>{{workTicket.safety_note}}</view>
          </view>
    </view>

    <!-- 作业安全注意事项 -->
    <view class='line'>
          <view class='item desc'>
                <view class='title'>作业所需资源：</view>
                <view class='value text'>{{workTicket.requirement_resource}}</view>
          </view>
          
    </view>

    <!-- 备注信息 -->
    <view class='line'>
          <view class='title'>备注信息：</view>

          <view class='value textDiv'>
                  <textarea value = '{{workTicket.remark}}' placeholder='请输入备注信息' placeholder-class='remarkPlaceHolder' class='remark' maxlength='-1' bindinput='bindInput' data-flag = 'remark'></textarea>
          </view>
          
    </view>

    
    <!-- operator -->
    <view class='person'>
          <view class='someone'>
                <view class='title'>作业人员： </view>
                <view class='name'>{{operatorno.name}}</view> 
          </view>

          <view class='sure'>
                <input type='text' placeholder='请输入人员编号' data-flag = 'operator' placeholder-class='placeHolder' bindinput='bindInput'></input><text class='search name' bindtap='search' data-flag = 'operator'>搜索</text>
          </view>
    </view>


    <!-- operator -->
    <view class='person'>
          <view class='someone'>
                <view class='title'>作业完成确认人： </view>
                <view class='name'>{{surePersonno.name}}</view> 
          </view>

          <view class='sure'>
                <input type='text' placeholder='请输入人员编号' data-flag = 'surePerson' placeholder-class='placeHolder' bindinput='bindInput'></input><text class='search name' bindtap='search' data-flag = 'surePerson'>搜索</text>
          </view>
    </view>


    <!-- 照片预览 -->
    <view class='preview'>
          <view class='imgs'>
                <view class='img' wx:for = '{{photos}}' bindtap = 'preview' bindlongtap='deletePic' data-index = '{{index}}' >
                      <image src='{{item.tempFilePath}}' mode = 'aspectFill' ></image>
                </view>
          </view>
    </view>


    
</view>

<view class='douFill'></view>

<!-- buttons -->

  <view class='button'>
        <view class='buttons'  wx:if = '{{!isScan || !isPhoto}}'>
                <view class='scan' bindtap='scanCode'>扫描条码</view>
                <view class='photo' bindtap='photo'>拍照</view>
        </view>

        <view wx:if = '{{isScan && isPhoto}}'>

              <view wx:if = '{{!isUpload}}'>
                    <view class='upload' bindtap='uploadPictures'>上传图片</view>
              </view>

              <view wx:if = '{{isUpload}}'>
                    <view class='finsh' bindtap='finsh'>完成</view>
              </view>
        </view>

       

       
  </view>

</view>
