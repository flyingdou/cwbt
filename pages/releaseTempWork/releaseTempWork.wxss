.content{
  background: white;
  height: auto;
}

.line{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  height: 1.4rem;
  border-bottom: 1rpx solid rgba(245,245,245,1);
}

.title{
  width: 50%;
}

.remark{
  padding: 20rpx 0;
}

.textareaClass{
  padding-left: 20rpx;
  padding-top: 20rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  text-align: left;
  background:rgba(245,245,245,1);
  width: 96%;
  margin-top: 20rpx;
}

.placeholderClass{
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
  text-align: left;
}

.preview{
  overflow: hidden;
  margin-top: 40rpx;
}

.pic{
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.fill{
  width: 100%;
  height: 300rpx;
}

.buttons{
  position: fixed;
  bottom: 40rpx;
  left: 0;
  width: 100%;
}

.button{
  font-size: 28rpx;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 5rpx;
  color: white;
  margin: 15rpx 4%
}

.scanButton{
  background:rgba(255,114,114,1);
  box-shadow:0px 5px 10px rgba(255,114,114,0.1);
}

.photoButton{
  background:rgba(38,130,255,1);
  box-shadow:0px 5px 10px rgba(0,85,248,0.1); 
}

.uploadButton{
  background: #ff4401;
}

.finshButton{
  background: black;
}

.item{
  display: flex;
  justify-content: flex-end;
  align-items: center;  
}

.moreIcon{
  width: 26rpx;
  height: 26rpx;
}

.task{
  padding: 20rpx;
}

.content-input{
  padding: 0 20rpx;
  font-size: 28rpx;
  width: 284rpx;
  color: rgba(153, 153, 153, 1);
  border: 2rpx solid #F0F0F2;
}

.content-box {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 20rpx;
}

.add-content{
  margin-left: 20rpx;
  padding: 0 10rpx;
  height: 1.4rem;
  text-align: center;
  line-height: 1.4rem;
  font-size: 22rpx;
  color: #FFF;
  background-color: rgba(38,130,255,1);
  border-radius: 4rpx;
}

.del-content{
  background: black;
}
.block1{
  padding: 0 4%;
}

.block2{
  margin-top: 20rpx;
  padding-top: 20rpx;
}

.pickerDiv{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

