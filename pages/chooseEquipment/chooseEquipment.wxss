/* default css */
Page{
  margin: 0;
  padding: 0;
  width: 100%;
  background:rgba(245,245,245,1);
}

image{
  display: block;
  width: 100%;
  height: 100%;
}

.content{
  width: 100%;
  height: 100%;
  position: relative;
}

.navBar{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx;
  background: white;
  margin: 20rpx 0;
  border-radius: 5rpx;
}

.preNav{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.nav{
   font-size: 28rpx;
   padding-right: 10rpx;
   color: blue; 
}

.current{
  color: rgba(153,153,153,1);
}

.deptList{
  background:white;
  padding:20rpx;
}

.preDept{
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding: 20rpx 0;
  font-size: 28rpx;
  border-bottom:0.5px solid rgba(245,245,245,1);
}

.preDept:last-child{
  border-bottom: none;
}

.left{
  display: flex;
  
}

.right{
  color: blue;
}

.next{
  width: 26rpx;
  height: 26rpx;
}

.userList{
  background:white;
  padding:20rpx;
  margin:20rpx 0;
}

.preUser{
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding:20rpx 0;
  border-bottom:1rpx solid rgba(245,245,245,1);
}

.preUser:last-child{
  border-bottom: none;
}

.userName{
  font-size: 28rpx;
}

.douFill{
  width: 100%;
  height: 180rpx;
}

.footer{
  position: fixed;
  left: 0;
  bottom: 20rpx;
  width: 100%;
}

.scan{
   font-size: 28rpx;
   text-align: center;
   color: white;
   margin: 0 20rpx;
   padding: 20rpx 0;
   background:rgba(38,130,255,1);
   box-shadow:0px 5px 10px rgba(255,114,114,0.1);
   border-radius: 8rpx;
}