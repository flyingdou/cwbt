Page{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background: #F0F0F2;
}

image{
  display: block;
  width: 100%;
  height: 100%;
}

.content{
  width: 100%;
  height: 100%;
}


.blocks{
  padding: 20rpx 5%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.block{
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  font-size: 32rpx;
  color: white;
}

.task{
  background: #3AA9F8;
}

.meetting{
  background: #2BCFB4;
}

.random{
  background: #FBAE38;
}

.pics{
  width: 90%;
  height: 80%;
  padding: 0 40rpx;
}

.pic{
  width: 100%;
  height: 100%;
  background: url('https://fish.ecartoon.com.cn/picture/201810274602.jpg') no-repeat;
  background-size: 100% 100%; 
  font-size: 28rpx;
  color: red;
  text-align: center;
}

/* 登录页面 */
.login{
  width: 100%;
  height: 100%;
  background:linear-gradient(180deg,rgba(52,138,255,1) 0%,rgba(38,213,255,1) 100%);
  opacity:1;
}

.banner{
  margin: 0 auto;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
}

.form{
  margin: 0 auto;
  width:592rpx;
  height:520rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 10rpx 10rpx rgba(0,76,248,0.2);
  opacity:1;
  border-radius:10rpx;
}

.form-line{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 0 10%;
  padding: 20rpx 0;
  font-size: 28rpx;
  line-height: 1.4rem;
  color: #BBB;
  background-color: #FFF;
  border-bottom: 1px solid #F0F0F2;
}

.account-icon{
  margin-right: 20rpx;
  width: 36rpx;
  height: auto;
}

.password-icon{
  margin-left: 6rpx;
  margin-right: 20rpx;
  width: 30rpx;
  height: auto;
}

.from-button{
  margin: 0 auto;
  width:496rpx;
  height:88rpx;
  background:rgba(38,130,255,1);
  box-shadow:0px 5px 10px rgba(0,85,248,0.1);
  opacity:1;
  border-radius:6rpx;
  text-align: center;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:88rpx;
  color:rgba(255,255,255,1);
}