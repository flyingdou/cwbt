Page{
  background: #FFF;
}

/* 登录页面 */
.login{
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg,rgba(52,138,255,1) 0%,rgba(38,213,255,1) 100%);
  opacity: 1;
}

.banner{
  margin: 0 auto;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
}

.form{
  margin: 0 auto;
  width: 592rpx;
  height: 520rpx;
  background: rgba(255,255,255,1);
  box-shadow: 0px 10rpx 10rpx rgba(0,76,248,0.2);
  opacity: 1;
  border-radius: 10rpx;
}

.form-line{
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 0 10%;
  padding: 20rpx 0;
  font-size: 28rpx;
  line-height: 1.4rem;
  color: #BBB;
  background-color: #FFF;
  border-bottom: 1px solid #F0F0F2;
}

.account-icon{
  margin-right: 20rpx;
  width: 36rpx;
  height: auto;
}

.password-icon{
  margin-left: 6rpx;
  margin-right: 20rpx;
  width: 30rpx;
  height: auto;
}

.operator-icon{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: absolute;
  top: 0;
  right: 0;
  padding: 20rpx 20rpx;
  height: 1.4rem;
}

.right-icon{
  width: 40rpx;
  height: auto;
}

.form-input{
  width: 260rpx;
}

.from-button{
  position: relative;
  margin: 0 auto;
  width: 496rpx;
  height: 88rpx;
  background: rgba(38,130,255,1);
  box-shadow: 0px 5px 10px rgba(0,85,248,0.1);
  opacity: 1;
  border-radius: 6rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 88rpx;
  color: rgba(255,255,255,1);
}

.open-button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
}

.open-button::after{
  border: none;
}

/* 首页 */
.content{
  position: relative;
  width: 100%;
  height: 100%;
}

.pics{
  /* padding: 20rpx 0rpx; */
}

.radius{
  /* border-radius: 10rpx; */
  overflow: hidden;
}

.blocks{
  padding: 20rpx 0;
}

.blocks-title{
  padding: 0 40rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(21,21,21,1);
}

.blocks-content{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-top: 30rpx;
}

.blocks-item{
  width: 25%;
}

.blocks-icon{
  position: relative;
  margin: 0 auto;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background: rgba(232,232,232,1);
  border-radius: 20rpx;
}

.blocks-memo{
  margin: 0 auto;
  margin-top: 20rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(21,21,21,1);
  text-align: center;
}

.blocks-count{
  position: absolute;
  top: -14rpx;
  right: -14rpx;
  padding: 4rpx;
  min-width: 24rpx;
  font-size: 20rpx;
  color: #FFF;
  font-family: PingFang SC;
  font-weight: 500;
  text-align: center;
  line-height: 28rpx;
  border-radius: 50%;
  background: rgba(255,114,114,1);
}