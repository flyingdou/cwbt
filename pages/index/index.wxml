<view class = 'content' wx:if = '{{memberId}}'>
     <view class='blocks'>
            <view class='block task' bindtap='goto' data-type = 'task'>工作任务</view>
            <view class='block meetting' bindtap='goto' data-type = 'meetting' >会议通知</view>
            <view class='block random' bindtap='goto' data-type = 'random' >临时任务</view>
     </view>
     <view class='pics'>
          <view class='pic'>
               CWBT掌中宝
          </view>
     </view>
</view>

<view class = 'login' wx:if='{{!memberId}}'>
  <!-- 填充高度 -->
  <view style='height: 80rpx;'></view>

  <!-- logo -->
  <view class='banner'>
    <image src='https://fish.ecartoon.com.cn/picture/201810274602.jpg' mode='aspectFill'></image>
  </view>

  <!-- 填充高度 -->
  <view style='height: 80rpx;'></view>

  <view class='form'>
    <!-- 填充高度 -->
    <view style='height: 100rpx;'></view>
    <view class='form-line'>
      <image class='account-icon' src='../../icon/zhanghao@2x.png' mode='widthFix'></image>
      <input type='text' class='form-input' placeholder='请输入手机号码' bindinput='checkAccountWechatId' data-key='account'></input>
    </view>
    <view class='form-line'>
      <image class='password-icon' src='../../icon/mima@2x.png' mode='widthFix'></image>
      <input type='password' class='form-input' placeholder='请输入密码' bindinput='saveFormParam' data-key='password'></input>
    </view>
    <!-- 填充高度 -->
    <view style='height: 70rpx;'></view>
    <view class='from-button' bindtap='login'>登录</view>
  </view>
</view>