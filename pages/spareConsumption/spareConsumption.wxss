/* 选择设备样式 */
.choose{
  display: flex;
  margin: 0 20rpx;
  padding: 20rpx 0;
  justify-content: flex-start;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 20rpx;
}

.left{
	flex: 1;
  padding-left: 20rpx;
  width: auto;
  font-size: 24rpx;
}

.right{
	flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 20rpx;
}

.moreIcon{
  width: 26rpx;
  height: 26rpx;
}

/* 备件列表样式 */
.spare{
  position: relative;
  margin: 20rpx;
  padding: 20rpx;
  background: white;
  border-radius: 20rpx;
}

.tv{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(245,245,245,1);
}

.tv:last-child{
  border-bottom: none;
}

.title{
  display: flex;
  align-items: center;
  padding-right: 20rpx;
}

.line{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.moreIcon{
  width: 26rpx;
  height: 26rpx;
  padding-left: 20rpx;
}

.radio-wraper{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
}

.preSpare{
  position: relative;
}

.background-bolck{
  height: 20rpx;
  background-color: rgba(245,245,245,1);
}

.delIcon{
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
}

.add-btn{
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  padding: 20rpx 50rpx;
  font-size: 28rpx;
  color: white;
  text-align: center;
}

.btn-block{
  padding: 20rpx 60rpx;
  background: #2682FF;
  border-radius: 5rpx;
}

/* 底部按钮样式 */
.footer{
  position: fixed;
  left: 0;
  bottom: 20rpx;
  padding-top: 50rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cost{
  width: 80%;
  padding: 20rpx;
  font-size: 28rpx;
  color: white;
  background: #2682FF;
  border-radius: 5rpx;
  text-align: center;
}