<!-- 页面开始 -->
<view class='content'>
      <checkbox-group bindchange = 'checkboxChange'> 

      <view class='list'>
                <noData wx:if='{{!validList || validList.length <= 0}}'></noData>
                <view class='pre' wx:for = '{{validList}}' wx:key = ''>
                      <view class='line' bindtap='goto' data-id = '{{item.id}}'>
                            <view class='line1'>
                                  <view class='tv left'>
                                        <view class='title'>设备名称</view>
                                        <view class='value'>{{item.ename}}</view>
                                  </view>

                                  <view class='tv right'>
                                        <view class='title'>作业人员</view>
                                        <view class='value'>{{item.opeartor}}</view>
                                  </view>
                            </view>

                            <view class='lineFill'></view>

                            <view class='line2'>
                                  <view class='tv right'>
                                        <view class='title'>完成时间</view>
                                        <view class='value'>{{item.finishtime}}</view>
                                  </view>
                            </view>
                      </view>
                      <view class='radioDiv'>
                            <checkbox value='{{item.id}}' checked= '{{item.checked}}'></checkbox>
                      </view>
                </view>

      </view>
      
      <!-- 功能按钮 -->
      <view class='footer' wx:if='{{validList && validList.length > 0}}'>
            <checkbox-group bindchange = 'chooseAll'>
                  <!-- 全选按钮 -->
                  <view class='isAll'>
                        <checkbox value = '{{isAll.id}}' checked='{{isAll.checked}}'>全选</checkbox>
                  </view>
            </checkbox-group>
            

            <!-- 验收按钮 -->
            <view class='buttons'>
                  <view class='button validYes' bindtap='valid' data-status = '2'>验收</view>
            </view>
            
      
      </view>


      </checkbox-group>

      <view class='douFill'></view>
      




</view>
