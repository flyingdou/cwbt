Page{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background: #f0f0f2;
}

image{
  display: block;
  width: 100%;
  height: 100%;
}

.content{
  width: 100%;
  height: 100%;
}


.blocks{
  padding: 20rpx 5%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.block{
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  font-size: 32rpx;
  color: white;
}

.task{
  background: #3AA9F8;
}

.meetting{
  background: #2BCFB4;
}

.random{
  background: #FBAE38;
}

.pics{
  width: 90%;
  height: 80%;
  padding: 0 40rpx;
}

.pic{
  width: 100%;
  height: 100%;
  background: url('https://fish.ecartoon.com.cn/picture/201810274602.jpg') no-repeat;
  background-size: 100% 100%; 
  font-size: 28rpx;
  color: red;
  text-align: center;
}