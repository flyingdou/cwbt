Page{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background:rgba(245,245,245,1);
}

.content{
   width: 100%;
   height: 100%;
}

.pre{
  position: relative;
  background: rgba(255,255,255,1);
  margin: 30rpx 5%;
  padding: 30rpx 25rpx;
  border-radius: 8rpx;
  
}

.line{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}


.value{
  padding-left: 20rpx;
} 

.line2{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.div{
  padding-bottom: 15rpx;
}

.fill{
  height: 10rpx;
  width: 100%;
  border-top: 1rpx solid rgba(193,193,193,1);
  opacity:0.25;
  margin-top: 10rpx;
}

.tag{
  position: absolute;
  right: 20rpx;
  top: 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.tagDiv{
  position: relative;
  width: 71rpx;
  height: 45rpx;
}

.statusFont{
  position: absolute;
  font-size: 18rpx;
  color: white;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 42rpx;
}

.cancelButton{
  font-size: 18rpx;
  color: white;
  text-align: center;
  background: #2682FF;
  margin-left: 10rpx;
  padding: 8rpx 20rpx;
  border-radius: 5rpx;
}

.choose{
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

.footer{
  position: fixed;
  left: 0;
  bottom: 40rpx;
  width: 100%;
}

.button{
  font-size: 28rpx;
  color: white;
  padding: 15rpx;
  margin: 0 20rpx;
  text-align: center;
  border-radius: 8rpx;
}

.chooseTask{
  background:rgba(255,114,114,1);
  box-shadow:0px 5px 10px rgba(255,114,114,0.1);
}

.get{
  background: black;
}

.cancel{
  background: #ff4401;
  margin-top: 25rpx;
}

.douFill{
  width: 100%;
  height: 200rpx;
}
