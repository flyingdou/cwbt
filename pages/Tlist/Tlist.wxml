<!-- 页面开始 -->
<view class='content'>
      <!-- 列表 -->
      <view class='List'>
           <checkbox-group bindchange = 'chooseChange'>
                    <noData wx:if='{{!taskList || taskList.length <= 0}}'></noData>
                    <!-- 每一个 -->
                    <view class='pre' wx:for = '{{taskList}}' wx:key = '' bindtap='goto' data-index = '{{index}}' style='background:{{item.color}}'>
                          
                          <!-- 第一行 -->
                          <view class='line div'>
                                <view class='title'>设备名称</view>
                                <view class='value'>{{item.ename}}</view>
                          </view>

                          <!-- 第二行 -->
                          <view class='line2 div'>
                                <view class='line'>
                                      <view class='title'>作业名称</view>
                                      <view class='value'>{{item.name}}</view>
                                </view>

                                <view class='line'>
                                      <view class='title'>维修等级</view>
                                      <view class='value'>{{item.level}}</view>
                                </view>

                          </view>

                          <view class='line div'>
                                <view class='fill'></view>
                          </view>
                          
                          <!-- 第三行 -->
                          <view class='line2 div'>
                                <view class='line'>
                                      <view class='title'>所属船舶</view>
                                      <view class='value'>{{item.boatName}}</view>
                                </view>

                                <view class='line'>
                                      <view class='title'>计划时间</view>
                                      <view class='value'>{{item.plannedtime}}</view>
                                </view>

                          </view>

                          <!-- 图标 -->
                          <view class='tag' wx:if = '{{item.status == 9 && !isUpdate}}'>
                                <!-- 撤销领取 -->
                                <view class='cancelButton' wx:if = '{{user_id == item.collectorpersonid}}' catchtap='unchoose' data-id='{{item.id}}' data-index = '{{index}}'>撤销领取</view>
					  
					                  <!-- 他人领取 -->
                            <view wx:else class='tagDiv'>
                                  <view class='statusFont'>【{{item.collector}}已领取】</view>
                            </view>
					  
                          </view>
                          

                          <!-- 多选择 -->
                          <view class='choose'>
                                <checkbox value='{{item.id}}'  color = 'rgba(54, 123, 240, 1)' catchtap='ni' wx:if = '{{item.status == 1}}'></checkbox>
                          </view>

                    </view>

           </checkbox-group>

      </view>

      <!-- 底部按钮 -->
      <view class='footer' wx:if = '{{!isUpdate}}'>
		        <view class='button chooseTask' bindtap='getTask' data-status = '9'>领取任务</view>
      </view>

      <!-- 底部填充 -->
      <view class='douFill'></view>

</view>
