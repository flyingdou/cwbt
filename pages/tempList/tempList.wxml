<!-- 页面开始 -->
<view class='content'>

      <view class='list'>
            
                <view class='pre' wx:for = '{{workCardList}}' wx:key=''>
                      <view class='line' bindtap='goto' data-link = '../tempWork/tempWork?id={{item.id}}' data-index = '{{index}}'>
                            <!-- 填充高度 -->
                            <view style='height: 20rpx;' wx:if='{{item.status == 1}}'></view>
                            <view class='line1'>
                                  <view class='tv left'>
                                        <view class='title'>设备名称</view>
                                        <view class='value'>{{item.equipmentName}}</view>
                                  </view>

                                  <view class='tv'>
                                        <view class='title'>发起人</view>
                                        <view class='value'>{{item.userName}}</view>
                                  </view>
                            </view>

                            <view class='lineFill'></view>

                            <view class='line2'>
                                  <view class='tv right'>
                                        <view class='title'>异常发现时间</view>
                                        <view class='value'>{{item.createtime}}</view>
                                  </view>
                            </view>

                            <!-- 图标 -->
                            <view class='tag' wx:if='{{item.status == 9}}'>
                                  <view class='tagDiv'>
                                        <image src='../../icon/tag@2x.png' mode='aspectFill'></image>
                                        <view class='statusFont'>已领取</view>
                                  </view>

                                  <!-- 取消 -->
                                  <view class='cancle' wx:if = '{{item.collectorpersonid == user_id}}' catchtap='cancle' data-index = '{{index}}'>取消</view>
                            </view>
                      </view>

                </view>

      </view>
      
      <!-- 功能按钮 -->
      <view class='footer'>
          
            
      
      </view>


      




</view>
