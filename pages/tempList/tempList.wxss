.content{
  position: relative;
}

.list{
  padding: 20rpx;
}

.pre{
  background: white;
  padding:20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.line{
  position: relative;
  width: 100%;
  padding-top: 20rpx;
}


.line1{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.lineFill{
  width: 100%;
  height: 2rpx;
  background: rgba(245,245,245,1);
  margin-bottom: 20rpx;
  margin-top: 15rpx;
}

.line2{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.left{
 margin-right: 120rpx;
}

.tv{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.value{
  padding-left: 20rpx;
}

.footer{
  position: fixed;
  left: 0;
  bottom: 40rpx;
  width: 100%;
  height: auto;
}

.tag{
  position: absolute;
  right: 10rpx;
  top: -30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.tagDiv{
  position: relative;
  width: 71rpx;
  height: 45rpx;
}

.statusFont{
  position: absolute;
  font-size: 18rpx;
  color: white;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 42rpx;
}

.isAll {
  font-size: 28rpx;
  color: rgba(51,51,51,1);
  padding: 20rpx;
  text-align: right;
}

.valid{
  font-size: 28rpx;
  color: white;
  padding: 15rpx;
  margin: 0 20rpx;
  text-align: center;
  background:rgba(38,130,255,1);
  box-shadow:0px 5px 10px rgba(255,114,114,0.1);
  border-radius: 8rpx;
}


.cancle{
  font-size: 18rpx;
  color: white;
  text-align: center;
  background: #2682FF;
  margin-left: 10rpx;
  padding: 8rpx 20rpx;
  border-radius: 5rpx;
}

 .button{
  font-size: 28rpx;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 5rpx;
  color: white;
  margin: 15rpx 20rpx;
 }

 .releaseWorkcard{
   background: black;
 }

 .fill{
   width: 100%;
   height: 200rpx;
}

.douFill{
  width: 100%;
  height: 400rpx;
}

.lineContainer{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.inputValue{
  padding: 20rpx 0;
}